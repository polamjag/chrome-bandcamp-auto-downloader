{
  "version" : "0.0.4",
  "name": "Bandcamp Auto Downloader",
  "manifest_version": 3,
  "description": "Automatically downloads your purchased albums and tracks in one click.",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "https://bandcamp.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://bandcamp.com/download*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/main.js"
  },
  "icons": {
    "16": "icon-128.png",
    "128": "icon-128.png"
  }
}