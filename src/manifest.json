{
  "name" : "Bandcamp Auto Downloader",
  "version" : "0.0.3",
  "manifest_version": 2,
  "description": "Automatically downloads your purchased albums and tracks in one click.",
  "permissions" : [
    "downloads",
    "https://bandcamp.com/"
  ],
  "content_scripts":[ {
    "matches": ["https://bandcamp.com/download*"],
    "js": [
      "js/content.js"
    ]
  }],
  "background" : {
    "persistent": false,
    "scripts": [
      "js/main.js"
    ]
  },
  "icons" : {
    "16" : "icon-128.png",
    "128" : "icon-128.png"
  }
}
